{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build:worklet": "npm run build -w packages/recorder-worklet",
    "build:main": "npm run build -w packages/wbat",
    "build:test-server": "npm run build -w packages/test-server",
    "build": "npm run build:worklet && npm run build:main && npm run build:test-server",
    "start:static": "python3 -m http.server --directory docs",
    "start": "npm run start -w packages/test-server",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts, .js",
    "tests:headed": "jest --config jest.config.js --runInBand --testMatch \"<rootDir>/tests/**/*.test.ts\""
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/audiobuffer-to-wav": "^1.0.4",
    "@types/d3-array": "^3.2.1",
    "@types/jest": "^29.5.14",
    "eslint": "^9.17.0",
    "expect-puppeteer": "^11.0.0",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-puppeteer": "^11.0.0",
    "prettier": "^3.4.2",
    "puppeteer": "^23.11.1",
    "rollup": "^4.21.2",
    "rollup-plugin-copy": "^3.5.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0"
  },
  "dependencies": {
    "@jspsych/plugin-audio-button-response": "^2.1.0",
    "tslib": "^2.7.0"
  }
}
